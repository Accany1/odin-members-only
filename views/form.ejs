<html>
  <body>
    <% if (locals.user) {%>
    <h1>Input form</h1>
    <form method="POST" action="/new">
        <formgroup>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title">
        </formgroup>
        <formgroup>  
            <label for="text">Message:</label>
            <input type="text" id="text" name="text">
        </formgroup>
        <button type="submit">Submit</button>
    </form>
    <% } else { %>
    <h1>Please log in</h1>
    <% } %>
    <a href="/">Home</a>
  </body>
</html>